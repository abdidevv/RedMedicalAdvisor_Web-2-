---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="iniciar sesion">
    <section>
        <div class="login-container">
            <h1 class="login-title">Iniciar sesión</h1>
            <form class="login-form">
                <div class="login-input-group">
                    <input class="login-input" type="email" id="email" placeholder=" " required>
                    <label class="login-label" for="email">Correo electrónico</label>
                </div>
                <div class="login-input-group">
                    <input class="login-input" type="password" id="password" placeholder=" " required>
                    <label class="login-label" for="password">Contraseña</label>
                </div>
                <button class="login-button" type="submit">Entrar</button>
            </form>
        </div>
    </section>
</Layout>

<style>
    body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
    .login-container {
            background-color: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 300px;
        }
        .login-title {
            color: #ff3131;
            text-align: center;
            margin-bottom: 1.5rem;
        }
        .login-form {
            display: flex;
            flex-direction: column;
        }
        .login-input-group {
            position: relative;
            margin-bottom: 1rem;
        }
        .login-input {
            width: 17rem;
            padding: 0.75rem;
            border: 1px solid #dddfe2;
            border-radius: 6px;
            font-size: 1rem;
            transition: 0.2s ease all;
        }
        .login-input:focus {
            outline: none;
            border-color: #ff3131;
            box-shadow: 0 0 0 2px rgba(255, 49, 49, 0.2);
        }
        .login-label {
            position: absolute;
            left: 0.75rem;
            top: 0.75rem;
            color: #999;
            font-size: 1rem;
            transition: 0.2s ease all;
            pointer-events: none;
        }
        .login-input:focus ~ .login-label,
        .login-input:not(:placeholder-shown) ~ .login-label {
            top: -0.5rem;
            left: 0.5rem;
            font-size: 0.75rem;
            color: #ff3131;
            background-color: white;
            padding: 0 0.25rem;
        }
        .login-button {
            background-color: #ff3131;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 0.75rem;
            font-size: 1.1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .login-button:hover {
            background-color: #9b1c1c;
        }
</style>