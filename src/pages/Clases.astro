<style>
    .clases_hero{
        display: flex;
        flex-direction: column;
        height: auto;
        justify-content: center;
        align-items: center;
    }
    .section_title{
        font-size: 32px;
        margin-bottom: 14px;
    }
    .content_videos{
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        
        gap: 2rem;
        width: 100%;
        max-width: 1200px;
    }

    @media (max-width: 768px) {
        .content_videos {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 480px) {
        .content_videos {
            grid-template-columns: 1fr;
        }
    }
</style>